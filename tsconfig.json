{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/applications/*": ["src/modules/applications/*"],
      "@/roles/*": ["src/modules/roles/*"],
      "@/users/*": ["src/modules/users/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
